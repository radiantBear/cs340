<div class="container">
  <h1 class="mb-4">Appointments</h1>
  <p class="lead">Scheduled and completed appointments</p>
  <table class="table table-striped table-bordered">
    <thead class="table-dark">
      <tr>
        <th>Employee</th>
        <th>Customer</th>
        <th>Services</th>
        <th>Date</th>
        <th>Status</th>
        <th>Notes</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      {{#each appointments}}
        <tr>
          <td>{{this.employeeName}}</td>
          <td>{{this.customerName}}</td>
          <td>{{this.servicesRequested}}</td>
          <td>{{this.appointmentDate}}</td>
          <td>{{this.status}}</td>
          <td>{{this.notes}}</td>
          <td>
            <a href="/appointments/{{this.appointmentId}}" class="btn btn-sm btn-primary">Edit</a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>